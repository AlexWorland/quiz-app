# Quiz Application Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Database
# ===========================================
DATABASE_URL=postgres://quiz:quiz@localhost:5432/quiz

# ===========================================
# Authentication
# ===========================================
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# Encryption key for storing API keys (must be 32 bytes)
ENCRYPTION_KEY=32-byte-secret-key-change-me!!!

# ===========================================
# MinIO (S3-compatible storage)
# ===========================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=avatars

# ===========================================
# AI Providers (user can override in settings)
# ===========================================
# Default provider: claude, openai, or ollama
DEFAULT_AI_PROVIDER=claude

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API
OPENAI_API_KEY=sk-your-key-here

# Ollama (local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# ===========================================
# Speech-to-Text Providers
# ===========================================
# Default provider: whisper, deepgram, or assemblyai
DEFAULT_STT_PROVIDER=deepgram

# Deepgram API
DEEPGRAM_API_KEY=your-deepgram-key-here

# AssemblyAI API
ASSEMBLYAI_API_KEY=your-assemblyai-key-here

# Note: Whisper uses OPENAI_API_KEY

# ===========================================
# Server Configuration
# ===========================================
BACKEND_PORT=8080
FRONTEND_URL=http://localhost:5173

# Logging level: trace, debug, info, warn, error
RUST_LOG=info

# ===========================================
# Frontend (Vite)
# ===========================================
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080
