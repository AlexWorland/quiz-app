{
  "name": "quiz-frontend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:docker": "E2E_MODE=docker playwright test",
    "test:e2e:local": "E2E_MODE=local E2E_START_SERVER=false playwright test",
    "test:e2e:local:serve": "E2E_MODE=local E2E_API_URL=http://localhost:8080 E2E_WS_URL=ws://localhost:8080 E2E_WEB_COMMAND=\"npm run dev -- --host 0.0.0.0 --port 4173\" playwright test",
    "test:e2e2": "playwright test -c e2e2/playwright.config.ts",
    "test:e2e2:ui": "playwright test -c e2e2/playwright.config.ts --ui",
    "test:e2e2:headed": "playwright test -c e2e2/playwright.config.ts --headed",
    "test:e2e2:local": "E2E2_MODE=local E2E2_START_SERVER=false playwright test -c e2e2/playwright.config.ts",
    "test:e2e2:local:serve": "E2E2_MODE=local E2E2_BASE_URL=http://localhost:4174 E2E2_WEB_COMMAND=\"npm run dev -- --host 0.0.0.0 --port 4174\" playwright test -c e2e2/playwright.config.ts"
  },
  "dependencies": {
    "@types/papaparse": "^5.5.2",
    "axios": "^1.6.2",
    "framer-motion": "^12.23.26",
    "html5-qrcode": "^2.3.8",
    "lucide-react": "^0.293.0",
    "papaparse": "^5.5.3",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^25.0.1",
    "msw": "^2.6.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
