# Development Dockerfile for Rust Backend
FROM rust:1.83-bookworm

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Note: sqlx-cli is not needed - migrations are run via sqlx::migrate in the Rust code

# Copy source code (dependencies will build on first cargo run)
COPY . .

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=30s --retries=5 \
    CMD curl -f http://localhost:8080/api/health || exit 1

# Run in development mode (cargo run watches for changes)
CMD ["cargo", "run"]

